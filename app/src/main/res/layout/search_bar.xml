<?xml version="1.0" encoding="utf-8"?>
<com.zsweigart.bikewise.incidents.list.searchbar.SearchBarView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_1x">

    <EditText
        android:id="@+id/search_bar_search_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/search"
        android:inputType="numberSigned"
        android:layout_weight="1"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/search_bar_search_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"/>

    <Button
        android:id="@+id/search_bar_search_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close"/>

</com.zsweigart.bikewise.incidents.list.searchbar.SearchBarView>